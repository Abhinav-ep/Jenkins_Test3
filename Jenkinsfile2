pipeline {
    agent any

    environment {
        KUBECONFIG = "${HOME}/.kube/config"  // Points to the kubeconfig on your local machine
    }

    stages {
        stage('Apply NGINX Deployment') {
            steps {
                script {
                    sh '''
                        echo "Applying nginx deployment"
                        kubectl apply -f Files/nginx-deployment.yaml
                    '''
                }
            }
        }
    }
}
